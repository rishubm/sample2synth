{
  "name": "sample-to-synthesis",
  "version": "1.0.0",
  "description": "Desktop app for analyzing audio samples and generating synthesizer parameters",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "keywords": [
    "audio",
    "synthesis",
    "machine-learning",
    "music",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "node-pty": "^1.0.0"
  },
  "build": {
    "appId": "com.yourname.sample-to-synthesis",
    "productName": "Sample to Synthesis",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "styles.css",
      "index.html",
      "python/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "python",
        "to": "python"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}